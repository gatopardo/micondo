{{define "title"}} Cuotas por Periodo{{end}}
{{define "head"}}  
 
{{end}}

 {{define "content"}}
      <div class="lwidth">
          <h3 class="center"> {{template "title" . }} </h3>


	  <div class="lwrapper fcols5b">
               <div class="box"> Periodo     </div>
               <div class="box"> Del {{.Per.Inicio | DATEFORMAT }} </div>
               <div class="box"> Al {{.Per.Final   | DATEFORMAT }} </div>
               <div class="box">             </div>
               <div class="box">             </div>
          </div>

	  <div class="lwrapper fcols5b">
             <div class="box"> Apto        </div>
             <div class="box"> Tipo        </div>
             <div class="box"> Fecha       </div>
             <div class="box"> Monto       </div>
             {{ if or ( eq $.Level 3)  ( eq $.Level 4)}}
                <div class="box">   
                  <a class="btn btn-warning" href ="#">  Ed </a> 
                </div>
             {{end}} 
             {{ if eq $.Level 5}}
                <div class="box">   
                  <span>
                  <a class="btn btn-warning" href ="#">  Ed </a> 
                  <a class="btn btn-danger" href ="#">  Del </a> 
                  </span>
                </div>
             {{end}} 
          </div>

     {{ range  .LisCuot}}
         <div class="lwrapper fcols5a">
            <div class="box"> {{ .Apto  }} </div>
            <div class="box"> {{ .Tipo  }} </div>
            <div class="box"> {{ .Fecha | DATEFORMAT }} </div>
            <div class="box"> {{ .Amount | FORMAT64 }} </div>
            {{ if or ( eq $.Level 3)  ( eq $.Level 4)}}
                <div class="box">
                  <a class="btn btn-warning" href="/cuota/update/{{.Id}}" > Ed </a>
                </div>
            {{end}} 
            {{ if eq $.Level 5}}
              <div class="box">
                  <span>
                     <a class="btn btn-warning" href="/cuota/update/{{.Id}}" > Ed </a>
                     <a class="btn btn-danger" href="/cuota/delete/{{.Id}}" > Del </a>
                  </span>
              </div>
            {{end}} 
         </div>
     {{end}}
      {{template "footer" .}}
{{end}}

{{define "foot"}}{{end}}
