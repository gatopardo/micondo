{{define "title"}}Escoger Periodo{{end}}
{{define "head"}} {{end}}
{{define "foot"}}<div><h5 class="mcenter">{{.Title}}</h5></div>{{end}}

{{define "content"}}
  <div class="fcontent">
       <h3 class="mcenter">{{template "title" .}}</h3>  

       <form method="post" action="{{.Action}}">
   	<div class="fwrapper fcols4">
           <div class="fbox">
               <label for="period" >Periodo</label>
           </div>
           <div class="fbox">
               <select name="id"> 
                  {{range $key, $value := .LisPeriod}}
                    <option value="{{ $value.Id }}">{{ $value.Inicio | DATEFORMAT }}</option>
                  {{end}}
               </select>
           </div>
           <div class="fbox">
                 <span>
		<input type="submit" name="action"  value="Seguir" />
		<input type="submit" name="action"  value="Cancelar" />
                 </span>
           </div>
           <div class="fbox">
		<input type="hidden" name="token" value="{{.token}}">
           </div>
        </div>
       </form>

  </div>
{{end}}
