{{define "title"}}Actualizar Categoria{{end}}
{{define "head"}}
{{end}}

{{define "content"}}
  <div class="fcontent">
       <h3 class="mcenter">{{template "title" .}}</h3>
       <form method="post">
	   <div class="fwrapper fcols2">
              <div class="fbox">
                 <label for="codigo">Codigo</label>
              </div>
              <div class="fbox">
                 <input type="text" id="codigo" name="descrip" size="2"  value="{{.Tipo.Codigo}}" readonly autofocus />
              </div>
           </div>
		
	   <div class="fwrapper fcols4">
              <div class="fbox">
                 <label for="descrip">Descripcion</label>
              </div>
              <div class="fbox">
                 <input type="text" id="descrip" name="descrip" size="32" maxlength="48"  value="{{.Tipo.Descripcion}}" />
              </div>
              <div class="fbox" >Check </div>
              <div class="fbox" >
                  <input type="checkbox" name="ckdescrip" value="true">
              </div>
           </div>

	   <div class="fwrapper fcols4">
              <div class="fbox">
		 <input type="hidden" name="token" value="{{.token}}">
              </div>
              <div class="fbox">
                 <input type="submit" name="action" value="Actualizar" />
                 <input type="submit" name="action" value="Cancelar" />
              </div>
           </div>
		
	</form>
	
	{{template "footer" .}}
  </div>

{{end}}
{{define "foot"}}{{end}}
