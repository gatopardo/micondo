{{define "title"}}Actualizar Cuenta{{end}}
{{define "head"}} {{end}}
{{define "content"}}

<div class="fcontent">
     <h3 class="mcenter">{{template "title" .}}</h3>
     <form method="post">
	   <div class="fwrapper fcols2 ">
              <div class="fbox">
                <label for="cuenta">Cuenta </label>
              </div>
              <div class="fbox">
                <input type="text" id="cuenta" name="cuenta" size="16" maxlength="32" value="{{.User.Cuenta}}" placeholder="Cuenta" readonly autofocus />
              </div>
           </div>

	<div class="fwrapper fcols4">
           <div class="fbox">
               <label for="aptId" ><span>Apto</span></label>
           </div>
           <div class="fbox">
               <select name="aptId"> 
                    <option value="{{.User.ApartaId }}">{{ .aptCodigo }}</option>
                  {{range $key, $value := .LisApts}}
                    <option value="{{ $value.Id }}">{{ $value.Codigo }}</option>
                  {{end}}
               </select>
           </div>
	</div>

	   <div class="fwrapper fcols4 ">
              <div class="fbox">
                <label for="name">Nombre </label>
              </div>
              <div class="fbox">
                <input type="text" id="name" name="name" size="48" maxlength="64" value="{{.User.Name}}" placeholder="Nombre"  readonly />
              </div>
           </div>

	   <div class="fwrapper fcols4 ">
              <div class="fbox">
                <label for="email" >Email </label>
              </div>
              <div class="fbox">
                <input type="email" id="email" name="email" size="32" maxlength="48" value="{{.User.Email}}" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" placeholder="Email" />
             </div>
           </div>

	   <div class="fwrapper fcols4 ">
              <div class="fbox">
                <label for="tele1" >Tele1 </label>
              </div>
              <div class="fbox">
                <input type="tel" id="tele1" name="tele1" size="12" maxlength="24" value="{{.User.Tele1}}" placeholder="123-456-7890"  pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"  />
             </div>
           </div>

	   <div class="fwrapper fcols4 ">
              <div class="fbox">
                <label for="tele2" >Tele2 </label>
              </div>
              <div class="fbox">
                <input type="tel" id="tele2" name="tele2" size="12" maxlength="24" value="{{.User.Tele2}}"  placeholder="123-456-7890"
           pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"  />
             </div>
           </div>

	   <div class="fwrapper fcols4 ">
              <div class="fbox">
                <label for="level" >Nivel </label>
              </div>
              <div class="fbox">
                <input type="range" id="level" name="level" size="2" maxlength="2" placeholder="Nivel" min="0" max="5" value="{{.User.Level}}" />
             </div>
           </div>

            <div class="fwrapper fcols2 ">
               <div class="fbox">
                  <label for="photo">photo</label>
               </div>
               <div class="fbox">
                   <input type="file" id="photo" name="photo" accept="image/*" value ="{{.pers.Photo}}" />
               </div>
            </div>

            <div class="fwrapper fcols2 ">
               <div class="fbox">
                  <label for="photo">photo</label>
               </div>
               <div class="fbox">
                   <image alt="photo" src="data:image/jpeg;base64,{{.imgPhoto}}" height="60" />
               </div>
            </div>



	   <div class="fwrapper fcols2 ">
              <div class="fbox">
		<input type="hidden" name="token" value="{{.token}}">
             </div>
              <div class="fbox">
                 <span> 
                     <input type="submit" name="action" value="Actualizar" />
                     <input type="submit" name="action" value="Cancelar" />
                 </span> 
             </div>
           </div>
	</form>
	
	{{template "footer" .}}
</div>

{{end}}
{{define "foot"}}{{end}}
