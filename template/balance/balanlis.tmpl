{{define "pagi"}}
     <div class="cwrapper">
        {{ range $index, $btn := .slice }}
            {{if eq $btn $.current}}
               <div class="button color2">
                  <a class="label" href="/categoria/list/{{$btn}}"> << {{$btn}} >></a>
            {{else}}
               <div class="button color1">
                  <a class="label" href="/categoria/list/{{$btn}}"> {{$btn}}</a>
            {{end}}
               </div>
         {{end}}
     </div>
   {{end}}


 {{define "content"}}
      {{template "pagi"    .  }}
      <div class="lwidth2">
          <h3 class="center"> {{template "title" . }} </h3>

	  <div class="lwrapper fcols4">
             <div class="box"> Periodo      </div>
             <div class="box"> Monto      </div>
             <div class="box"> Cuota	   </div>
             {{ if or ( eq $.Level 3)  ( eq $.Level 4)}}
                <div class="box">   
                  <a class="btn btn-warning" href ="#">  Ed </a> 
                </div>
             {{end}} 
             {{ if eq $.Level 5}}
                <div class="box">   
                  <span>
                  <a class="btn btn-warning" href ="#">  Ed </a> 
                  <a class="btn btn-danger" href ="#">  Del </a> 
                  </span>
                </div>
             {{end}} 
          </div>

     {{ range  .LisBalan}}
          <div class="lwrapper fcols4">
             <div class="box"> {{ .Period | DATEFORMAT }} </div>
             <div class="box"> {{ .Amount | FORMAT64 }} </div>
             <div class="box"> {{ .Cuota  | FORMAT64 }} </div>
                {{ if or ( eq $.Level 3)  ( eq $.Level 4)}}
              <div class="box">
                <a class="btn btn-warning" href="/balance/update/{{.Id}}/{{$.current}}" > Ed </a>
              </div>
           {{end}} 
           {{ if eq $.Level 5}}
              <div class="box">
                  <span>
                    <a class="btn btn-warning" href="/balance/update/{{.Id}}/{{$.current}}" > Ed </a>
                   <a class="btn btn-danger" href="/balance/delete/{{.Id}}/{{$.current}}" > Del </a>
                </scan>
                  </span>
              </div>
           {{end}} 
         </div>
      {{end}}
      {{template "footer" .}}
{{end}}

